<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_item_rv_house_home"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_house"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/star_off_login"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_star_favorite_off"
        app:layout_constraintEnd_toEndOf="@id/iv_item_rv_house_home"
        app:layout_constraintTop_toTopOf="@id/iv_item_rv_house_home"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/star_on_login"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_star_favorite_on"
        app:layout_constraintEnd_toEndOf="@id/iv_item_rv_house_home"
        app:layout_constraintTop_toTopOf="@id/iv_item_rv_house_home"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>



</androidx.constraintlayout.widget.ConstraintLayout>

